	<script type="text/javascript">
		$(function(){
			$('.xiugai').click(function(){
			//console.log($('#oldpass').val())
			$.ajax({
				type:"post",
				url:"/users/updatePwd",
				data:{
					username:$('#username').val(),
					oldpass:md5($('#oldpass').val()),
					newpass:md5($('#newpass').val())
				},
				success:function(data){
					if(data==1){
						alert('修改成功')
						location.href='/login'
					}else{
						alert('修改失败')
						location.href='/updatePwd'
					}
				}
				
			});
		})
		})
		
